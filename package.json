{
    "name": "core_node",
    "version": "1.0.0",
    "description": "Sample app for node",
    "main": "main.js",
    "scripts": {
        "test": "mocha ./src/tests/**/*.spec.js --reporter mochawesome --reporter-options reportDir=TestResults --inline true",
        "build": "tsc -w",
        "start": "babel-node ./src/main.js",
        "serve": "npm-run-all --parallel lint build start",
        "prestart": "npm-run-all --parallel security-check test",
        "security-check": "nsp check",
        "clean": "gulp clean:lib",
        "lint": "npm-run-all --parallel lint-ts",
        "lint-ts": "tslint -p . -c ./tslint.json --fix -t stylish",
        "lint-js:w": "eslint *.config.* ./src/**/*.js ./dist/**/*.js --color"
    },
    "author": "Me",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "^4.0.5",
        "@types/mocha": "^2.2.44",
