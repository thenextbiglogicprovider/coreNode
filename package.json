        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.1",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "chalk": "^2.3.0",
        "del": "^3.0.0",
        "eslint": "^4.16.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-watch": "^3.1.3",
        "gulp": "^3.9.1",
        "gulp-typescript": "^3.2.3",
        "html-webpack-plugin": "^2.30.1",
        "live-server": "^1.2.0",
        "mocha": "^5.0.0",
        "mochawesome": "^2.3.1",
        "npm-run-all": "^4.1.2",
        "nsp": "^3.1.0",
        "open": "0.0.5",
        "rimraf": "^2.6.2",
        "style-loader": "^0.19.1",
        "ts-node": "^4.1.0",
        "tsd": "^0.6.5",
        "tslint": "^5.9.1",
        "typescript": "^2.6.2",
        "webpack": "^3.10.0",
        "webpack-dev-middleware": "^2.0.4",
        "webpack-hot-middleware": "^2.21.0",
        "webpack-md5-hash": "0.0.6"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
